<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<StackPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.project.guessingbirdgame.Controllers.MainController" stylesheets="@css/style.css" >
    <HBox fx:id="hBox" alignment="CENTER" spacing="20.0" styleClass="Page">
        <VBox fx:id="learningCard" alignment="CENTER" styleClass="Card" onMouseClicked="#LearningPage">
            <Label fx:id="learningText" alignment="CENTER" text="Learn" styleClass="Label"/>
        </VBox>

        <VBox fx:id="examCard" alignment="CENTER" styleClass="Card" onMouseClicked="#ExamPage">
            <Label fx:id="examText" alignment="CENTER" text="Exam" styleClass="Label"/>
        </VBox>

        <VBox fx:id="rankingCard" alignment="CENTER" styleClass="Card" onMouseClicked="#RankPage">
            <Label fx:id="rankingText" alignment="CENTER" text="Rank" styleClass="Label"/>
        </VBox>

        <VBox fx:id="ExitCard" alignment="CENTER" styleClass="Card" onMouseClicked="#ExitPage">
            <Label fx:id="ExitText" alignment="CENTER" text="Exit" styleClass="Label"/>
        </VBox>
    </HBox>
    <Label fx:id="UserName" textFill="white"/>
</StackPane>
